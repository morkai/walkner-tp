<form class="well filter-form">
  <div class="form-group">
    <label><%- t('orders', 'PROPERTY:status') %></label>
    <div id="<%- idPrefix %>-status" class="btn-group filter-btn-group" data-toggle="buttons">
      <% ['pending', 'confirmed', 'completed', 'cancelled'].forEach(function(status) { %>
      <label class="btn btn-default"><input type="checkbox" name="status[]" value="<%- status %>"><%- t('orders', 'status:' + status) %></label>
      <% }) %>
    </div>
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('orders', 'filter:itemSubmit') %></span></button>
  </div>
</form>
