<form class="symbols-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-_id" class="control-label"><%- t('symbols', 'PROPERTY:_id') %></label>
        <input id="<%- idPrefix %>-_id" class="form-control" type="text" name="_id" required maxlength="8" pattern="^[a-zA-Z0-9]{8}*$">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-group" class="control-label"><%- t('symbols', 'PROPERTY:group') %></label>
        <input id="<%- idPrefix %>-groupChoice" type="hidden">
        <input id="<%- idPrefix %>-group" class="form-control" type="text" name="group" required maxlength="50">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label"><%- t('symbols', 'PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" name="name" required maxlength="50">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
